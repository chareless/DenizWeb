@model DenizWeb.Models.Ban

@{
    ViewData["Title"] = "UserBan";
    Layout = "_LayoutAdmin";
}

<div class="card-body">
    <h1>Kullanıcıyı Yasakla</h1>
</div>
<hr />
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="UserBan">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="durum" class="control-label"></label>
                        <input asp-for="durum" class="form-control" />
                        <span asp-validation-for="durum" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="banTarihi" class="control-label"></label>
                        <input asp-for="banTarihi" class="form-control" />
                        <span asp-validation-for="banTarihi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="userId" class="control-label"></label>
                        <select asp-for="userId" class="form-control" asp-items="ViewBag.userId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Oluştur" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="card-body">
    <a asp-action="Ban">Geri</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
